<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="flex justify-center">
      <%= image_tag "logo-bg-white.png", class: "w-80 mt-6 text-center text-3xl font-extrabold text-gray-900" %>
    </div>  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.text_field :email, required: false, autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "Email",
                class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          %>
          <%# <label for="email-address" class="sr-only">Email</label> %>
          <%# <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email"> %>
        </div>
        <%= f.password_field :password, required: false, autofocus: true,
                input_html: { autocomplete: "current-password" },
                placeholder: "Mot de passe",
                class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          %>
         <%= f.password_field :password_confirmation, required: false, autofocus: true,
                input_html: { autocomplete: "current-password" },
                placeholder: "Confirmation du mot de passe",
                class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
          %>
      </div>

      <div class="mt-3">
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          S'inscrire
        </button>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to "DÃ©ja inscrit ?", new_session_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 text-center" %>   
    </div>
  </div>
</div>

